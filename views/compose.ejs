<%- include('partials/header'); -%>
    <h1>Compose</h1>
    <form class="" action="compose" method="post">
        <div class="form-group">
        <div class="mb-3">
            <label for="inptuTitle">Title</label>
            <input type="text" class="form-control" id="inputTitle" name="postTitle" placeholder="Enter Title">
        </div>
        <div class="mb-3">
            <label for="inputPost" class="form-label">Post</label>
            <textarea class="form-control" id="inputPost" rows="3" name="postBody"></textarea>
        </div>
        </div>        
        <button type="submit" class="btn btn-primary publish-button" name="button">Publish</button>
    </form>
<%- include('partials/footer'); -%>